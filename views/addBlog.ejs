<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/header") %>

    <title>Add New BlogPage</title>

    <style>
      /* Centering the form */
      .container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }

      /* Label styling */
      .form-label {
        font-weight: 600;
        color: #333;
      }

      /* Input fields */
      .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: 0.3s ease-in-out;
      }

      /* Input focus effect */
      .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        outline: none;
      }

      /* File input styling */
      #coverImage {
        padding: 8px;
      }

      /* File input hover effect */
      #coverImage:hover {
        background-color: #f9f9f9;
      }

      /* Submit button */
      .btn-primary {
        width: 100%;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        transition: 0.3s ease-in-out;
      }

      /* Button hover effect */
      .btn-primary:hover {
        background-color: #0056b3;
      }

      /* Responsive design */
      @media (max-width: 768px) {
        .container {
          width: 90%;
        }
      }
    </style>
  </head>
  <body>
    <%- include("./partials/navbar") %>

    <div class="container mt-4">
      <form action="/blog/add-blog" method="post" enctype="multipart/form-data">
        <label for="coverImage" class="form-label">Enter cover image</label>
        <input
          class="form-control"
          id="coverImage"
          name="coverImage"
          type="file"
          aria-label="coverImage"
        />

        <label for="title" class="form-label mt-4">Enter blog title</label>
        <input
          class="form-control"
          id="title"
          name="title"
          type="text"
          aria-label="title"
        />

        <label for="body" class="form-label mt-4">Enter blog body</label>
        <textarea
          class="form-control"
          id="body"
          name="body"
          rows="10"
        ></textarea>
        <button type="submit" class="btn btn-primary mb-3 mt-4">
          Upload Blog
        </button>
      </form>
    </div>

    <%- include("./partials/scripts") %>
  </body>
</html>
