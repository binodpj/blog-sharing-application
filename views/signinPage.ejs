<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/header") %>

    <title>Blogify Signin</title>

    <style>
      /* Centering the form and positioning */
      .position-absolute {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        max-width: 400px;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
      }

      /* Form elements and spacing */
      .mb-3 {
        margin-bottom: 1.5rem;
      }

      /* Label styling */
      .form-label {
        font-weight: 600;
        color: #333;
      }

      /* Input fields styling */
      .form-control {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: 0.3s ease-in-out;
      }

      /* Input focus effect */
      .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        outline: none;
      }

      /* Submit button styling */
      .btn-primary {
        width: 100%;
        padding: 14px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        transition: 0.3s ease-in-out;
      }

      /* Button hover effect */
      .btn-primary:hover {
        background-color: #0056b3;
      }

      /* Responsive for small devices */
      @media (max-width: 576px) {
        .position-absolute {
          width: 90%;
          max-width: 350px;
        }
      }
    </style>
  </head>
  <body>
    <%- include("./partials/navbar") %>

    <div class="position-absolute top-50 start-50 translate-middle">
      <form method="post" action="/user/signin">
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            aria-describedby="email"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <%- include("./partials/scripts") %>
  </body>
</html>
