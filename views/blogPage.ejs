<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/header") %>

    <title>Blog Page</title>
  </head>
  <body>
    <%- include("./partials/navbar") %>

    <div class="container mt-4">
      <img src="<%= blog.coverImageUrl %>" class="img-thumbnail" alt="..." />
      <h2 class="mb-4 mt-4"><%= blog.title %></h2>

      <pre><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
      <img
        src="<%= blog.createdBy.profileImageUrl %>"
        width="50px"
        alt=""
        class="me-2"
      />
      <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <h2>Comments (<%= locals.comments.length %>)</h2>
      <% comments.forEach(comment => { %>
      <div>
        <img
          src="<%= comment.createdBy.profileImageUrl %>"
          alt="image"
          width="30px"
        />
        <%= comment.createdBy.fullName %>
        <span class="ms-4"><%= comment.content %></span>
      </div>
      <% }) %> <% if (locals.user) { %>
      <form action="/blog/<%= blog._id %>/comment" method="post" class="mt-3">
        <input type="text" placeholder="Enter comment here" name="content" />
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
      </form>
      <% } %>
    </div>

    <%- include("./partials/scripts") %>
  </body>
</html>
